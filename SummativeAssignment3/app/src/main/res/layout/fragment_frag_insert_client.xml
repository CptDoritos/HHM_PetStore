<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragInsertClient"
    android:background="@drawable/gradient_drawable">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logoClickable"
            android:layout_width="125dp"
            android:layout_height="125dp"
            app:srcCompat="@drawable/hhmlogo"
            android:clickable="true"
            android:focusable="true"
            android:onClick="backToMain"/>

        <EditText
            android:id="@+id/editNameClientfirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Client First Name"
            android:textSize="25sp"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/editNameClientlastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Client Last Name"
            android:textSize="25sp"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/editNameClientpaymentMethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Client Payment Method"
            android:textSize="25sp"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btnInsertClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Client"
            android:textSize="20sp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="15dp"/>

    </LinearLayout>

</ScrollView>