<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragUpdateClient"
    android:background="@drawable/gradient_drawable">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logoClickable"
            android:layout_width="125dp"
            android:layout_height="125dp"
            app:srcCompat="@drawable/hhmlogo"
            android:clickable="true"
            android:focusable="true"
            android:onClick="backToMain"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editUpdateIDClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter ID of the name to update"
            android:inputType="number"
            android:textSize="20sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btnUpdateClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Client"
            android:textSize="15sp" />

    </LinearLayout>

    <EditText
        android:id="@+id/editUpdateClientfirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:hint="Enter New First Name"
        android:textColor="@color/white"/>

        <EditText
            android:id="@+id/editUpdateClientlastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="Enter New Last Name"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/editUpdateClientpaymentMethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="Enter New Payment Method"
            android:textColor="@color/white"/>

    <View
        android:id="@+id/dividerClient"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/teal_700" />

    <TextView
        android:id="@+id/textViewClient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current List"
        android:textSize="20sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/txtDispUpdateClient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="List"
        android:textColor="@color/white"/>

    </LinearLayout>

</ScrollView>